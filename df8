    <div id="result">
        <div style="margin-bottom: 20px;">
            <h2>選択した商品と金額の合計</h2>
            <ul id="selected-items">
            </ul>
        </div>
        <p id="total">合計: ¥0</p>
    </div>

    <script>
        const quantitySelectors = document.querySelectorAll('.quantity');
        const priceElements = document.querySelectorAll('.price');
        const productNames = document.querySelectorAll('.product-name');
        const selectedItemsList = document.getElementById('selected-items');
        const totalElement = document.getElementById('total');

        quantitySelectors.forEach((selector, index) => {
            selector.addEventListener('change', () => {
                updateTotal();
            });
        });

        function updateTotal() {
            let totalPrice = 0;
            selectedItemsList.innerHTML = '';

            quantitySelectors.forEach((selector, index) => {
                const pricePerItem = parseFloat(priceElements[index].textContent.replace('価格: ¥', '').replace(',', ''));
                const quantity = parseInt(selector.value);
                const itemName = productNames[index].textContent;
                const itemTotalPrice = pricePerItem * quantity;
                totalPrice += itemTotalPrice;
                if (quantity > 0) {
                    const listItem = document.createElement('li');
                    listItem.textContent = `${itemName} × ${quantity}個: ¥${itemTotalPrice.toLocaleString()}`;
                    selectedItemsList.appendChild(listItem);
                }
            });

            totalElement.textContent = `合計: ¥${totalPrice.toLocaleString()}`;
        }
    </script>
